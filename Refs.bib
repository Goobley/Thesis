issn = {0004-6361},
journal = {Astronomy \& Astrophysics},
keywords = {Line: profiles,Magnetic fields,Polarization,Sun: atmosphere,Sun: magnetic fields},
month = {dec},
number = {2},
pages = {959--970},
title = {{Bayesian inversion of Stokes profiles}},
url = {http://www.aanda.org/10.1051/0004-6361:20078107},
volume = {476},
year = {2007}
