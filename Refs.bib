journal = {arXiv e-prints},
keywords = {activity,atmosphere,data analysis,formation,line,methods,radiative transfer,sun},
month = {aug},
pages = {2108.07089},
title = {{Bayesian Stokes inversion with Normalizing flows}},
url = {http://arxiv.org/abs/2108.07089},
year = {2021}
}
