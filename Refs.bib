journal = {The Astrophysical Journal},
keywords = {chromosphere,color figures,flares,gamma rays,online-only material,sun,x-rays},
month = {jun},
pages = {4},
title = {{NUMERICAL SIMULATIONS OF CHROMOSPHERIC HARD X-RAY SOURCE SIZES IN SOLAR FLARES}},
url = {http://stacks.iop.org/0004-637X/752/i=1/a=4?key=crossref.09be6d942052f0a571dcc3305dfc8ea2},
