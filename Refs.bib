eprint = {1709.05184},
file = {:C\:/Users/goobley/AppData/Local/Mendeley Ltd./Mendeley Desktop/Downloaded/Carley et al. - 2017 - Estimation of a Coronal Mass Ejection Magnetic Field Strength using Radio Observations of Gyrosynchrotron Radiati.pdf:pdf},
